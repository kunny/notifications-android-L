<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.androidhuman.example.notifications.ColorActivity">

    <Button android:id="@+id/btn_activity_color_icon_background_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Colored icon background"/>

    <Button android:id="@+id/btn_activity_color_icon_background_color_withlargeicon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="with large icon"/>

    <Button android:id="@+id/btn_activity_color_icon_invalid_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invalid notification icon asset"/>

</LinearLayout>
